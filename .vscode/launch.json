    "version": "0.2.0",
    "configurations": [
        {
            "name": "rxd Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/airspy-tools/src/airspy_rx",
            "args": ["-f", "1420.405751", //frequency
                "-a", "10000000",  //samples per second = 10,000,000
                "-b", "0", //biast_val
                "-t", "2", //sample tyoe = AIRSPY_SAMPLE_INT16_IQ
                "-d", //verbose
                "-n", "593000000", //number of samples to get = 593,000,000
                "-v", "8", //vga_gain
                "-m", "8", //mixer_gain
                "-l", "11", //lna_gain
                "-w", //receive_wav = TRUE
                "-z" //daemon mode
                ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/airspy-tools/src",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },

        {
